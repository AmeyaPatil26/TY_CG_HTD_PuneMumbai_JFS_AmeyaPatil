<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- Configuration for Map -->
	<bean id="sports" class="com.capgemini.springcore.beans.Sports">
		<property name="name" value="Cricket" />
		<property name="totalplayers" value="11" />
		<property name="teamInfo">
			<map>
				<entry key="India" value="Dhoni"/>
				<entry key="Pakistan" value="sarfaraz"/>
				<entry key="Australia" value="Arron Finch"></entry>
			</map>
		</property>
	</bean>

</beans>
