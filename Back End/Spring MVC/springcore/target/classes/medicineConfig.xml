<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- Configuration for Set -->
	<bean id="medicine"
		class="com.capgemini.springcore.annotation.beans.Medicine">
		<property name="name" value="Crosine"></property>
		<property name="price" value="56.26"></property>
		<property name="type" value="Allopathic"></property>
		<property name="drugsSet">
			<set>
				<value>Abc1</value>
				<value>Paracetamol</value>
				<value>xyz2</value>
			</set>

		</property>
	</bean>

